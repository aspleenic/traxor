<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event Name</th>
      <th>City (State)</th>
      <th>Country</th>
      <th>Venue</th>
      <th>Total Cost</th>
      <th>Event URL</th>
      <th>Impact Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.event_city %></td>
        <td><%= event.event_country %></td>
        <td><%= event.event_location %></td>
        <td><%= event.event_total_cost %></td>
        <td><%= event.event_url %></td>
        <td><%= event.event_impact_score %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

